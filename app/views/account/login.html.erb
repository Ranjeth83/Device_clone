<h2>Login</h2>
<br/>
<%= flash[:notice] %>
<%= form_with url: "/account/login", method: :post do |f| %>
    <div class="field">
    <%= f.label :email %> <br/>
    <%= f.text_field :email %>
    </div>
    <div class="field">
    <%= f.label :password %> <br/>
    <%= f.password_field :password %>
    </div>
    <%= link_to "Forgot your password?",password_forgot_password_path%>
    <br/><br/>
    <div class="action">
    <%= f.submit "login"%>
    </div><br/>

You don't have account? <%= link_to "Sign up", account_signup_path %>
<% end %>
